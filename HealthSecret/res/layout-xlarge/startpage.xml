<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/books"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <Switch
            android:id="@+id/lang1"
            android:layout_width="609dp"
            android:layout_height="72dp"
            android:layout_weight="0.16"
            android:text="Myanmar Language"
            android:textColor="#ff9933"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="594dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="0.27" >

            <Button
                android:id="@+id/btnquiz"
                android:layout_width="wrap_content"
                android:layout_height="338dp"
                android:layout_gravity="left|bottom"
                android:layout_weight="0.01"
                android:drawableLeft="@drawable/quiz1"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btnvitamin"
                android:layout_width="wrap_content"
                android:layout_height="336dp"
                android:layout_gravity="right|bottom"
                android:layout_weight="0.01"
                android:drawableLeft="@drawable/hm1"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="3dp"
        android:layout_weight="3.18"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" >

            <Button
                android:id="@+id/btntip"
                android:layout_width="313dp"
                android:layout_height="300dp"
                android:drawableLeft="@drawable/tips1"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btnexercise"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ex1"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>